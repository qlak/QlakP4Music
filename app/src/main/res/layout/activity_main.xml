<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020"
    android:fillViewport="true"
    tools:context="com.baza1234.qlakp4music.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- LOGO VIEW -->
            <!-- Background -->
            <ImageView
                android:id="@+id/logobg"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/musicapplogobg"
                android:scaleType="centerInside"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"/>
            <!-- Text (Name of the App, Name of the Activity) -->
            <ImageView
                android:id="@+id/logo"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/musicapplogo"
                android:scaleType="centerInside"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"/>
            <!-- Pulsing Animation -->
            <ImageView
                android:id="@+id/logoanimation"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/logo01"
                android:scaleType="centerInside"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"/>

            <!-- BELOW LOGO - MAIN SCREEN -->
            <RelativeLayout
                android:layout_below="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/naglowek"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/naglowek_main"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>

                <!-- PLAY BUTTON + Animation -->
                <ImageView
                    android:id="@+id/play"
                    android:layout_below="@+id/naglowek"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:src="@drawable/playbutton"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/playpress"
                    android:layout_below="@id/naglowek"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/abutton00"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <!-- LIBRARY BUTTON + Animation -->
                <ImageView
                    android:id="@+id/library"
                    android:layout_below="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:src="@drawable/librarybutton"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/librarypress"
                    android:layout_below="@id/play"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/abutton00"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <!-- MARKET BUTTON + Animation -->
                <ImageView
                    android:id="@+id/market"
                    android:layout_below="@id/library"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:src="@drawable/marketbutton"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/marketpress"
                    android:layout_below="@id/library"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/abutton00"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <!-- ABOUT BUTTON + Animation -->
                <ImageView
                    android:id="@+id/about"
                    android:layout_below="@+id/market"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:src="@drawable/aboutbutton"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/aboutpress"
                    android:layout_below="@id/market"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/abutton00"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <!-- Lower Bar with Hint View inside -->
            <ImageView
                android:id="@+id/lowbar"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:src="@drawable/musicapplow"
                android:scaleType="centerInside"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"/>

            <!-- HINT + HINT TEXT = HINTVIEW-->
            <LinearLayout
                android:id="@+id/hintview"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="225dp"
                android:layout_height="35dp">

                <!-- HINT + HINT TEXT -->
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/the_hint"
                    android:padding="7dp"
                    android:textColor="#BBBBBB"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/hinttext"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint1"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Black Border Right and Left Lines -->
        <ImageView
            android:id="@+id/leftbar"
            android:src="@drawable/musicappleft"
            android:layout_alignParentLeft="true"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/rightbar"
            android:src="@drawable/musicappright"
            android:layout_alignParentRight="true"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside" />
    </RelativeLayout>
</RelativeLayout>
