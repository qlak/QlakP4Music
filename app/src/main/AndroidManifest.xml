<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baza1234.qlakp4music">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayActivity"
            android:label="@string/category_play"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LibraryActivity"
            android:label="@string/category_library"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MarketActivity"
            android:label="@string/category_market"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/category_about"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PaymentActivity"
            android:label="@string/category_payment"
            android:screenOrientation="portrait" />
    </application>

</manifest>